<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_testing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.minhh.ideo.Testing">

        <VideoView
            android:id="@+id/testingVideoView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/testingVideoView"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonA"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonB"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonC"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/control_layout"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/buttonD"
            android:gravity="right"
            android:visibility="invisible"
            >
            <Button
                android:id="@+id/other_word_btn"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:text="Từ khác"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <Button
                android:id="@+id/result_btn"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="10dp"
                android:text="Xem đáp án"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

